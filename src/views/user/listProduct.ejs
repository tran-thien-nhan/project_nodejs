<style>
    .product-card {
        position: relative;
    }

    .product-image {
        position: relative;
        overflow: hidden;
    }

    .product-image img {
        transition: transform 0.3s, opacity 0.3s;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s;
        cursor: pointer;
    }

    .view-button {
        display: none;
        font-size: 20px;
        /* Điều chỉnh kích thước nút */
        padding: 10px 20px;
        /* Điều chỉnh padding của nút */
    }

    .overlay:hover {
        opacity: 1;
    }

    .overlay:hover .view-button {
        display: block;
    }

    .overlay:hover+img {
        transform: scale(1.1);
    }

    .buy-button {
        display: block;
        width: 100%;
        padding: 1rem;
        background-color: #007bff;
        color: #fff;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
        border-radius: 10px;
        transition: background-color 0.3s;
    }

    .buy-button:hover {
        background-color: #0056b3;
    }
</style>
<div class="container">
    <div class="row">
        <% products.forEach(item=> { %>
            <div class="col-md-4 col-sm-6">
                <div class="card mb-4 product-card">
                    <div class="card-header">
                        <div class="product-image">
                            <a href="/user/pdetail/<%=item.id%>">
                                <img src="<%= item.image %>" alt="image" class="img-fluid">
                            </a>
                            <div class="overlay" onclick="location.href='/user/pdetail/<%=item.id%>';">
                                <a href="/user/pdetail/<%=item.id%>" class="btn btn-success view-button">Xem</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 style="text-align: center; margin-bottom: 0;">
                            <%= item.title %>
                        </h5>
                        <a href="/user/pdetail/<%=item.id%>" class="mt-2 buy-button" style="font-size: larger;">xem</a>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</div>

<script>
    const productImages = document.querySelectorAll('.product-image');

    productImages.forEach((productImage) => {
        productImage.addEventListener('mouseenter', () => {
            productImage.querySelector('.overlay').style.opacity = '1';
        });

        productImage.addEventListener('mouseleave', () => {
            productImage.querySelector('.overlay').style.opacity = '0';
        });
    });
</script>