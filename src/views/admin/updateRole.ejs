<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Cập nhật thông tin tài khoản (role)</h1>
        </div>
        <div class="card-body">
            <form action="/admin/updaterole/<%= data ? data._id : '' %>" method="POST">
                <input type="hidden" name="id" value="<%= data ? data._id : '' %>">
                <div class="form-group">
                    <label for="name">Họ và tên:</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= data ? data.name : '' %>"
                        required>
                    <span class="text-danger">
                        <%= errors ? errors.name : '' %>
                    </span>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email"
                        value="<%= data ? data.email : '' %>" required>
                    <span class="text-danger">
                        <%= errors ? errors.email : '' %>
                    </span>
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu:</label>
                    <input type="password" class="form-control" id="password" name="password"
                        value="<%= data ? data.password : '' %>" required>
                    <span class="text-danger">
                        <%= errors ? errors.password: '' %>
                    </span>
                </div>
                <div class="form-group">
                    <label for="phone">Số điện thoại:</label>
                    <input type="tel" class="form-control" id="phone" name="phone" value="<%= data ? data.phone : '' %>"
                        required>
                    <span class="text-danger">
                        <%= errors ? errors.phone : '' %>
                    </span>
                </div>
                <div class="form-group">
                    <label for="address">Địa chỉ:</label>
                    <input type="text" class="form-control" id="address" name="address"
                        value="<%= data ? data.address : '' %>" required>
                    <span class="text-danger">
                        <%= errors ? errors.address : '' %>
                    </span>
                </div>
                <label for="gender">Giới tính:</label>
                <div class="form-check">
                    <input type="radio" name="gender" value="male" <%=data && data.gender=='male' ? 'checked' : '' %>>
                    <label for="">Nam</label>
                </div>
                <div class="form-check">
                    <input type="radio" name="gender" value="female" <%=data && data.gender=='female' ? 'checked' : ''
                        %>>
                    <label for="">Nữ</label>
                </div>
                <label for="role">Role:</label>
                <div class="form-check">
                    <input type="radio" name="role" value="admin" <%=data && data.role=='admin' ? 'checked' : '' %>>
                    <label for="">admin</label>
                </div>
                <div class="form-check">
                    <input type="radio" name="role" value="user" <%=data && data.role=='user' ? 'checked' : ''
                        %>>
                    <label for="">user</label>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </form>
        </div>
    </div>
</div>