<div class="mt-2">
    <% if (message) { %>
        <div class="alert alert-success alert-dismissable">
            <!-- <button type="button" class="close" data-dismiss="alert">&times;</button> -->
            <strong>Success!</strong>
            <%= message %>
        </div>
        <% } %>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Number</th>
                        <th>total</th>
                        <th>Name</th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(item=> { %>
                        <tr>
                            <td>
                                <img src="<%= item.image %>" alt="image" width="100px" class="img-thumbnail">
                            </td>
                            <td>
                                <%= item.title %>
                            </td>
                            <td>
                                <%= item.price %>$
                            </td>
                            <td>
                                <%= item.number %>
                            </td>
                            <td>
                                <%= item.price * item.number %>$
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.address %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
</div>